# i3blocks config file

[work-time]
command=seconds=$(~/bin/get-work-time); seconds=${seconds:-0}; [ "$seconds" = "null" ] && seconds=0; hours=$((${seconds%.*} / 3600)); mins=$(((${seconds%.*} % 3600) / 60)); printf "ğŸ’¼ %02d:%02d\n" $hours $mins
interval=60
separator_block_width=30

[buzz]
command=echo "ğŸ $(buzz next)"
interval=30
separator_block_width=30

[gh-commits]
command=echo "âœ… $(~/bin/gh-commits-today)"
interval=300
separator_block_width=30

[volume]
command=echo "ğŸ”Š $(amixer get Master | grep -oP '\[\d+%\]' | head -1 | tr -d '[]')"
interval=1
signal=10
separator_block_width=30

[time]
command=date '+%Y-%m-%d %H:%M '
interval=60
separator_block_width=30
